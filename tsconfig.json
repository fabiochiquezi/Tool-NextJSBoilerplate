{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
  },
  "include": [
      "next-env.d.ts",
      "src/pages/_document.js",

      "src/**/*.ts",
      "src/**/*.tsx",

      "app/**/*.ts",
      "app/**/*.tsx",

      "components/**/*.ts",
      "components/**/*.tsx",

      "helpers/**/*.ts",
      "helpers/**/*.tsx",

      "firebase/**/*.ts"
  ],
  "exclude": ["node_modules", "helpers/tests/*"]
}
