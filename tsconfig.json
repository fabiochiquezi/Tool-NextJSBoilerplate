{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
        "app/*": ["app/*"],
        "helpers/*": ["helpers/*"],
        "services/*": ["services/*"],
        "components/*": ["components/*"],
        "config/*": ["config/*"],
        "src/*": ["src/*"],
        "functions/*": ["src/functions/*"]
    },
  },
  "include": [
      "next-env.d.ts",

      "src/pages/_document.page.js",
      "src/**/*.ts",
      "src/**/*.tsx",

      "app/**/*.ts",
      "app/**/*.tsx",

      "components/**/*.ts",
      "components/**/*.tsx",

      "helpers/**/*.ts",
      "helpers/**/*.tsx",

      "services/**/*.ts"
  ],
  "exclude": ["node_modules", "helpers/tests/*"]
}
